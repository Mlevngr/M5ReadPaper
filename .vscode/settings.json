    // ReaderPaper: add a PowerShell profile that dot-sources the workspace powershell.ps1
    "terminal.integrated.profiles.windows": {
        "ReaderPaper PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoExit", "-Command", ". '${workspaceFolder}\\powershell.ps1'"]
        }
    },

    // Set ReaderPaper PowerShell as the default integrated terminal for this workspace
    "terminal.integrated.defaultProfile.windows": "ReaderPaper PowerShell",

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "keyword.control.directive.c",
                    "punctuation.section.preprocessor.c",
                    "meta.preprocessor.c",
                    "variable.other.preprocessor"
                ],
                "settings": {
                    "foreground": "#555555",
                    "fontStyle": ""
                }
            }
        ]
    }
